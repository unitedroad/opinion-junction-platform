from rest_framework import serializers

from .models import Article

class ArticleSerialiser(serializers.Serializer):
    content=serializers.CharField(max_length=200)
    author = ReferenceField(Author)
    title = serializers.CharField(required=True)
    published_date = DateTimeField()
    status = serializers.CharField()
    storytext = serializers.CharField()
    storyplaintext = serializers.CharField()
    excerpt = serializers.CharField()
    slug = serializers.CharField()
    tags = serializers.CharField(many=True)
    categories = serializers.CharField(many=True)
    
    def restore_object(self, attrs, instance=None):
        if instance is not None:
            instance.id=1
            instance.content=attrs.content
            return instance
        
        return Article()

class ArticleSerialiser(serializers.Serializer):
    id = serializers.CharField(required=True,primary_key=True)
    author_name = serializers.CharField()
    first_name = serializers.CharField()
    last_name = serializers.CharField()
    email_address = serializers.CharField()
    user_bio = serializers.CharField()
    user_role = serializers.CharField()
    #user_permissions = serializers.CharField(many=True)
    user_image = serializers.CharField()
